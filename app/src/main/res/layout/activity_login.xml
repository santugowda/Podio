<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.santhosh.podio.LoginActivity">


    <AutoCompleteTextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_textview_height"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:hint="@string/prompt_email"
        android:paddingLeft="@dimen/activity_login_details"
        android:background="@drawable/textview_border"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="@dimen/activity_textview_margin"
        android:autoText="false" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_textview_height"
        android:inputType="textPassword"
        android:hint="@string/prompt_password"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:paddingLeft="@dimen/activity_login_details"
        android:layout_marginBottom="@dimen/activity_textview_margin"
        android:background="@drawable/textview_border"
        android:imeOptions="actionUnspecified"
        android:layout_below="@+id/email"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_sign_in"
        android:textAllCaps="false"
        style="?android:textAppearanceLarge"
        android:textStyle="bold"
        android:layout_below="@+id/password"
        android:textColor="#FFF"
        android:background="@drawable/button_border"
        android:layout_alignParentStart="true" />
</RelativeLayout>
